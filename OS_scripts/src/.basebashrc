MyTranslate () {
	type=$1

	shift 1
	string="${@}"	

	if [[ "$type" == "short" ]]; then
		trans :ru -b "${string}"
	elif [[ "$type" == "long" ]]; then
		trans :ru "${string}"
	fi
}
alias t='MyTranslate short'
alias ta='MyTranslate long'
alias new='cd $(~/1/new.sh); vim main.cpp'
alias r='
        echo "Reboot? [Y/n]"
        read resp
        case $resp in [yY][eE][sS]|[Yy])
                reboot
        esac
'
